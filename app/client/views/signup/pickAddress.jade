    .uk-vertical-align-middle(style='width: 250px;')
     h3.uk-text-white Welcome to Hembu!
     img.uk-margin-bottom(src="/images/apartment-block.svg")
     .uk-panel.uk-panel-box        
        form.uk-form
            input#address(type="text")
            button.uk-button.uk-button-primary.uk-margin-top#create Create
