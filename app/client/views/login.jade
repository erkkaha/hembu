template(name="login")
 .container
  .row
   .col-md-6.col-md-offset-3
    .panel.panel-default
     .panel-heading 
      span Login
      a.pull-right(href="") Forgot your password?
     .panel-body 
      form#login 
       .form-group
        input.form-control#login-email(type="email", placeholder="Email")
       .form-group
        input.form-control#login-password(type="password", placeholder="Password")
       .form-group
        a(href="{{pathFor 'signup'}}") Signup
        button.btn.btn-success.pull-right Login
      