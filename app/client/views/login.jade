template(name="login")
 .container
  .row
   .col-md-6.col-md-offset-3
    .panel.panel-default
     .panel-heading 
      span Login
      a.pull-right(href="") Forgot your password?
     .panel-body
      .form-group
        input.form-control(type="email", placeholder="Email")
      .form-group
        input.form-control(type="password", placeholder="Password")
      .form-group
        a(href="{{pathFor 'signup'}}") Signup
        button.btn.btn-success.pull-right Login
      