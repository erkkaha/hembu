template(name="menu")
 nav.uk-navbar.uk-margin-large-bottom
    a.uk-navbar-toggle(href='#offcanvas', data-uk-offcanvas)
    a.uk-navbar-brand(href="{{address}}")
      img.header-logo(src="/images/hembu-logo.svg")
    .uk-navbar-flip
       .header-user-menu
        .user-menu-head
          | #{profile.name}
          img.header-user-pic(src="/api/avatar/{{currentUser._id}}")
        ul.user-menu.user-menu-closed 
         each addresses
          li.user-menu-item.menu-item-address
            a(href="#")
             | #{display}
         
         li.user-menu-item.menu-item-bookings
          a(href="#")
           | Bookings
         
         li.user-menu-item.menu-item-profile
          a(href="{{pathFor 'profile'}}")
           | Profile
         
         li.user-menu-item.menu-item-logout
           a(href="{{pathFor 'logout'}}")
            | Log out
    .uk-navbar-flip
       a(href="{{postUrl}}") 
        img.header-icon(src="/images/icons/write-icon.svg")
 #offcanvas.uk-offcanvas(style="background: transparent;")
  .uk-offcanvas-bar
   ul.uk-nav.uk-nav-offcanvas
    li
      a.boards-menu-item.menu-item-post(href="{{postUrl}}") Create New Notice
    each boards
     li
      a.boards-menu-item.menu-item-board(href="{{url}}") #{name}
     
